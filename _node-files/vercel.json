{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "frontend/dist/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "https://your-backend-url.railway.app/$1"
    }
  ],
  "env": {
    "REACT_APP_API_URL": "https://your-backend-url.railway.app/api"
  }
}

{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://your-heroku-app.herokuapp.com/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}